.container
  =form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|
    %h2.form-signin-heading Please sign in
    %label.sr-only{for: "inputEmail"} Email address
    =f.email_field :email, autofocus: true, placeholder: "Email address", type: "email", class: "form-control", id: "inputEmail"
    %label.sr-only{for: "inputPassword"} Password
    =f.password_field :password, placeholder: "Password", class: "form-control", id: "inputPassword"
    .checkbox
      %label
        =f.check_box :remember_me
        Remember me
    =f.button "Sign in", class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      =link_to "Sign up now", "/users/sign_up"
