=devise_error_messages!
=form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user-new container"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name, placeholder: "username"
          .user-image.col-md-2{style: "background-image: url();"}
            %button.btn.btn-primary Add image
            = f.file_field :avatar, class: "js-avatar_preview"
        = f.text_field :email, placeholder: "E-Mail", class: "user-email"
        = f.password_field :password, placeholder: "Password", class: "user-password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, size: "30x4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, size: "30x4", placeholder: "Works"
    .row.text-center.user-btn
      = f.button "save", class: "btn btn-lg btn-primary btn-block"
