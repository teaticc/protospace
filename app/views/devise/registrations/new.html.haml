=form_tag("/users", method: :post, class: "user-new container") do
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            %input{type: "text", placeholder: "Username",name:"name"}/
          .user-image.col-md-2
            %button.btn.btn-primary Add image
            %input{type: "file"}/
        %input.user-email{type: "email", placeholder: "E-Mail", name:"email"}/

        = devise_error_messages!
        %input.user-password{type: "password", placeholder: "Password", name:"password"}/
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            %input{type: "text", placeholder: "Member", name:"member"}/
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Profile", name:"profile"}
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Works", name:"works"}
    .row.text-center.user-btn
      %button.btn.btn-lg.btn-primary.btn-block{type: "submit", value:"sent"} Save
