.media
  .media-left
    = link_to image_tag(comment.user.avatar, size: "64x64", alt: "64x64", class: "media-object", "data-holder-rendered": "true", "data-src": "holder.js/64x64"), user_path(comment.user)
  .media-body
    %h4#top-aligned-media.media-heading
      = comment.user.name
    %p
      = comment.comment
