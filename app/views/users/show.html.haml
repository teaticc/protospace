.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to image_tag(@user.avatar, size: "64x64", alt: "64x64", class: "media-object", "data-holder-rendered": "true", "data-src": "holder.js/64x64"), user_path(@user)
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @user.prototypes.length
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
    = render @prototypes, partial: "prototypes/prototype"
.text-center
  = paginate(@prototypes)
