= form_for(@user, html: {class: "container user-new"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name, placeholder:"Username", value: @user.name
          .user-image.col-md-2{style: "background-image: url(#{@user.avatar});"}
            = button_tag class: "btn btn-primary" do
              = f.file_field :avatar
              Change image
        = f.text_field :email, placeholder: "E-mail", value: @user.email, class: "user-email"
        = f.password_field :password, placeholder: "Password" ,class: "user-password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholedr: "Member", value: @user.member
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, size: "30x4", placeholder: "Profile" do
              = @user.profile
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, size:"30x4", placeholder:"Works" do
              = @user.works
    .row.text-center.user-btn
      = f.button "save", class: "btn btn-lg btn-primary btn-block"
