- if user_signed_in?
  - if good_user current_user.id, prototype.id
    = button_to prototype_good_path(prototype, "#"), method: :delete, class: "btn btn-default", remote: true do
      = image_tag("icon_heart.png")
      Like
      %span.num
        = prototype.goods_count
  - else
    = button_to prototype_goods_path(prototype), class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg")
      Like
      %span.num
        = prototype.goods_count
- else
  %button.btn.btn-default
    = image_tag("icon_heart.svg")
    Like
    %span.num
      = prototype.goods_count
